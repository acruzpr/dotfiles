Xft.antialias: true
xterm*colorMode: on
XTerm.VT100*color255: on
.BorderWidth: 8
xterm*cursorColor: LimeGreen
xterm*pointerColor: red
xterm*foreground: LightGoldenrod1 
xterm*background: grey20 
XTerm*.LoginShell: true
